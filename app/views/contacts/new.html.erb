
<%= form_with(model: @contact, local: true) do |f|%>
<% if @contact.errors.any? %>
<div id="error_explanation">
  <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @contact.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :content %>
<%= f.text_field :content %>
<%= f.submit %>
<% end %>
